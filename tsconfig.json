{
  "compilerOptions": {
      "target": "esnext",
      "module": "es6",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "jsx": "react",
      "lib": [
          "DOM",
          "DOM.Iterable",
          "ESNext",
          "ES6",
      ],
      "allowJs": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "strict": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "noEmit": true,
      "rootDir": "./src",
      "outDir": "./dist"
  }
}